datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  email     String    @unique
  fullName  String
  password  String
  products  Product[]
  createdAt DateTime  @default(now())

  @@map(name: "users")
}

model Product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  user        User?    @relation(fields: [createdBy], references: [id])
  createdBy   String?  @db.ObjectId
  title       String
  description String
  image       String
  createdAt   DateTime @default(now())
  price       Float
  stock       Int      @default(1)

  @@map(name: "products")
}